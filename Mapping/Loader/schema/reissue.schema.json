{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://flaphl.com/schema/reissue-1.0.json",
  "title": "Flaphl Reissue Serialization Mapping",
  "description": "JSON Schema for Flaphl Reissue serialization mapping configuration",
  "type": "object",
  "properties": {
    "classes": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/class"
      }
    }
  },
  "definitions": {
    "class": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Fully qualified class name"
        },
        "properties": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/property"
          }
        },
        "groups": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Serialization groups for the entire class"
        }
      }
    },
    "property": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Property name"
        },
        "ignore": {
          "type": "boolean",
          "description": "Whether to ignore this property during serialization",
          "default": false
        },
        "serialized-name": {
          "type": "string",
          "description": "Custom name to use in serialized output"
        },
        "groups": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Serialization groups this property belongs to"
        },
        "max-depth": {
          "type": "integer",
          "minimum": 1,
          "description": "Maximum depth for nested object serialization"
        },
        "type": {
          "type": "string",
          "description": "Property type hint for denormalization"
        }
      }
    }
  }
}
